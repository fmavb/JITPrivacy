{
    "name": "JIT Privacy Extension",
    "version": "1.0",
    "description": "JIT privacy plugin",
    "permissions": ["storage", "activeTab", "tabs"],
    "background":{
        "scripts": ["main.js"],
        "persistent": false
    },
    "browser_action":{
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons":{
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "content_scripts": [
        {   
            "matches": ["<all_urls>"],
            "run_at": "document_idle",
            "all_frames": true,
            "js": ["content.js"]
        }
    ],
    "manifest_version": 2
}